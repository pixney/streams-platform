<tbody>
    {% for row in table.rows %}
    <tr id="{{ loop.index }}" class="{{ row.class }}">

        {% if table.options.sortable %}
        <td>
            {{ icon('fa fa-arrows handle') }}
            <input type="hidden" name="{{ row.table.options.prefix }}order[]" value="{{ row.key }}" />
        </td>
        {% endif %}

        {% if not table.actions.empty() %}
        <td>
            <div class="a-input">
                <input  id="id-{{ row.key }}" type="checkbox" name="{{ row.table.options.prefix }}id[]"
                    value="{{ row.key }}" />
                <label for="id-{{ row.key }}">
                    <svg width="16" height="14" viewBox="0 0 16 14">
                        <path d="M2 8.5L6 12.5L14 1.5"></path>
                    </svg>
                </label>
            </div>
        </td>
        {% endif %}

        {% for column in row.columns %}
        <td data-title="{{ trans(column.heading) }}" class="{{ column.class }}"
            {{ html_attributes(column.attributes) }}>
            {{ column.value|raw }}
        </td>
        {% endfor %}

        <td class="text-lg-right">
            <nobr>{{ buttons(row.buttons)|raw }}</nobr>
        </td>

    </tr>
    {% endfor %}
</tbody>
